<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.kdt.gametrend.game.GameDAO" >

	<select id="paginglist" resultType="gamedto">
		select gameNo, name, genre1, rating, thumbnail 
		from game where platform='pc' limit
		<foreach collection="array" item="num" separator=",">
			#{num}
		</foreach>
	</select>
	
	<!-- 게임 상세 페이지 -->
	<select id="gameDetail" resultType="gamedto" parameterType="int">
		select * from game where no = #{no}
	</select>
	
